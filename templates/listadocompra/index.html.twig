{% extends 'base.html.twig' %}

{% block title %}ShoppingCard{% endblock %}

{% block body %}

    <h1>LIST OF SHOPPING CARD</h1>
    

    {% if articles %}   
        <table id="articles" class="table table-scriped">
            <thead>
                <tr>
                    <th>Articles Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.title }}</td>
                        <td> 
                            <a href="/article/{{ article.id }}" class="btn btn-dark">Show</a>
                            <a href="/article/edit/{{ article.id }}" class="btn btn-light">Edit</a>
                            <a href="#" id="deleteButton" class="btn btn-danger delete-article" data-id="{{ article.id }}">Delete</a>
                            
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No articles to display</p>
    {% endif %}
    
{% endblock %}

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}